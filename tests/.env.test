# Test environment configuration for Docker-based Pi-hole testing

# Pi-hole Docker container configuration
PIHOLE_TEST_URL=http://localhost:42345
PIHOLE_TEST_PASSWORD=test_password_123
PIHOLE_TEST_CONTAINER_NAME=pihole-test
PIHOLE_DOCKER_COMPOSE_FILE=docker-compose.test.yml

# Test timeouts and retries
PIHOLE_TEST_STARTUP_TIMEOUT=60
PIHOLE_TEST_HEALTH_CHECK_RETRIES=12
PIHOLE_TEST_HEALTH_CHECK_INTERVAL=5

# Test data configuration
TEST_DOMAIN_BASE=test.local
TEST_IP_BASE=192.168.99

# Specific test IP addresses and settings
TEST_A_RECORD_IP_START=100          # For test_03: A record tests
TEST_A_RECORD_IP_UPDATE=101         # For test_03: A record update test
TEST_STATS_IP_1=201                 # For test_05: Statistics test IP 1
TEST_STATS_IP_2=202                 # For test_05: Statistics test IP 2  
TEST_BULK_COUNT=10                  # For test_08: Number of bulk records
TEST_BULK_IP_START=150              # For test_08: Starting IP for bulk test
TEST_WORKFLOW_IP=250                # For test_10: Workflow validation IP

# Pre-populated test data (for setup_test_data)  
PRELOAD_SERVER1_IP=10               # 192.168.99.10
PRELOAD_SERVER2_IP=11               # 192.168.99.11  
PRELOAD_NAS_IP=20                   # 192.168.99.20

# Test execution settings
VERBOSE_OUTPUT=false
PARALLEL_EXECUTION=false
STOP_ON_FAILURE=false

# Performance test settings
PERFORMANCE_TIMEOUT=30

# Export test settings
EXPORT_TEST_FORMATS=json,csv
TEMP_EXPORT_DIR=/tmp/pihole-test-exports

# Docker network settings
DOCKER_NETWORK_NAME=pihole-test-network
DOCKER_CLEANUP_ON_EXIT=true